{
    "files.autoSave": "afterDelay",
    "terminal.integrated.allowWorkspaceConfiguration": true,
    "terminal.explorerKind": "external",
    "code-runner.saveFileBeforeRun": true,
    "code-runner.clearPreviousOutput": true,
    "code-runner.runInTerminal": true,
    "code-runner.saveAllFilesBeforeRun": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "workbench.colorTheme": "Nord",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "redhat.telemetry.enabled": true,
    "vs-kubernetes": {
        "vscode-kubernetes.kubectl-path.mac": "/Users/craigsamuelson/.vs-kubernetes/tools/kubectl/kubectl",
        "vscode-kubernetes.minikube-path.mac": "/Users/craigsamuelson/.vs-kubernetes/tools/minikube/darwin-amd64/minikube",
        "vscode-kubernetes.helm-path.mac": "/Users/craigsamuelson/.vs-kubernetes/tools/helm/darwin-amd64/helm"
    },
    "explorer.sortOrder": "type",
    "explorer.openEditors.sortOrder": "alphabetical",
    "editor.minimap.enabled": false,
    "workbench.statusBar.visible": false,
    "workbench.editor.autoLockGroups": {
        "default": true
    },
    "workbench.editor.enablePreview": false,
    "editor.renderWhitespace": "all",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "go.toolsManagement.autoUpdate": true,
    "focusBorder": "",
    "workbench.productIconTheme": "icons-carbon",
    "workbench.iconTheme": "vscode-icons",
    
    "workbench.colorCustomizations": {
        "list.activeSelectionBackground": "#141E27",
        "list.activeSelectionForeground": "#EEEDDE",
        
        "list.focusBackground": "#4700D8",
        "list.focusForeground": "#4700D8",
        "list.highlightForeground": "#4700D8",
        "list.hoverForeground": "#EEEDDE",
        "list.inactiveSelectionBackground": "#141E27",
        "list.inactiveSelectionForeground": "#EEEDDE",
        "list.inactiveFocusBackground": "#141E27",
        "list.invalidItemForeground": "#EEEDDE",

        "gitDecoration.modifiedResourceForeground": "#40DFEF",
        "gitDecoration.stageModifiedResourceForeground":"#d6ebff",
        "gitDecoration.untrackedResourceForeground": "#40DFEF",
        "editorHint.foreground": "#4700D8",
        "editorWarning.foreground": "#FCD900",  // Warnings inside the file
        "editorError.foreground": "#00FFC6",       // Errors inside the file
        "editorInfo.foreground": "",
        "list.warningForeground": "#FCD900",    // Warnings on the file name
        "list.errorForeground": "#E8630A",         // Errors on the file name
        "editorCursor.foreground": "#40DFEF",
        "terminalCursor.foreground": "#40DFEF",
        "editor.semanticTokenColorCustomizations": {
                "enabled": true,
                "rules": {
                    "type":  "#26A69A",
                    "namespace": "#00897B",
                    "function": "#00BCD4",
                    "variable": "#42A5F5",
                    "number": "#90A4AE",
                    "string": {
                        "foreground": "#90A4AE",
                        "italic": true
                    },
                    "comment": {
                        "foreground": "#546E7A",
                        "fontStyle": "italic"
                    },
                    "variable.readonly.defaultLibrary": "#A89F9B",
                    "macro": "#7E57C2",
                    "keyword": "#7986CB",
                    "operator": "#9575CD",
                    "type.modification": "#00897B",
                    "punctuation": "#A1887F"
                }
            }
        
    },
    "terminal.integrated.fontFamily": "SauceCodePro Nerd Font Mono",
    // "terminal.integrated.fontFamily": "Roboto Mono for Powerline",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.fontWeight": 300 ,
    "terminal.integrated.fontSize": 14,
    "window.zoomLevel": 1,
    "terminal.integrated.lineHeight": 0,
    "editor.fontLigatures": false,
    "editor.fontWeight": "normal",
    "editor.tokenColorCustomizations": {
            // "comments": "#035397",
            "variables": "#00FFC6",
            "keywords": "#40DFEF",
            "strings": "#EEEEEE",
            // "functions": "#42C2FF",
            // "types": "#5EE6EB",

            "textMateRules": [
                {
                    "scope": [
                        "keyword.operator.arithmetic",
                        "keyword.operator.comparison",
                        "keyword.operator",
                        "punctuation.separator",
                        "punctuation.terminator"
                    ],
                    "settings": {
                        "foreground": "#A1E3D8"
                    },
                },
            ]
        },
        "tabnine.experimentalAutoImports": true,
        "editor.codeActionsOnSave": {
        
        },
    }
